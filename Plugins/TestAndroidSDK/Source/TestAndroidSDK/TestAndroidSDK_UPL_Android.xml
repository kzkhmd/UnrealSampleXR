<?xml version="1.0" encoding="utf-8"?>

<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
		<log text="TestAndroidSDK Android init" />
	</init>

	<resourceCopies>
		<copyFile src="$S(PluginDir)/../../ThirdParty/Repository/mylibrary-release.aar" dst="$S(BuildDir)/libs/mylibrary-release.aar" />
	</resourceCopies>

	<buildGradleAdditions>
		<insert>
			dependencies {
				implementation fileTree(dir: 'src/main/libs', include: ['*.aar'])
			}
		</insert>
	</buildGradleAdditions>

	<proguardAdditions>
		<insert>
			-keep public class com.example.mylibrary.MyLib {
				*;
			}
		</insert>
	</proguardAdditions>

	<gameActivityImportAdditions>
		<insert>
			import com.example.mylibrary.MyLib;
		</insert>
	</gameActivityImportAdditions>
</root>
