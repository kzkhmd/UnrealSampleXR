<?xml version="1.0" encoding="utf-8"?>

<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
		<log text="TestAndroidSDK Android init" />
	</init>

	<prebuildCopies>
		<copyDir src="$S(PluginDir)/Private/Java" dst="$S(BuildDir)/src/com/Plugins/TestAndroidSDK" />
	</prebuildCopies>

	<resourceCopies>
		<copyFile src="$S(PluginDir)/../../ThirdParty/Repository/mylibrary-release.aar" dst="$S(BuildDir)/libs/mylibrary-release.aar" />
	</resourceCopies>

	<proguardAdditions>
		<insert>
			-keep public class com.example.mylibrary.WifiScanner {
				*;
			}
		</insert>
	</proguardAdditions>

	<androidManifestUpdates>
		<addPermission android:name="android.permission.CHANGE_WIFI_STATE" />
		<addPermission android:name="android.permission.ACCESS_WIFI_STATE" />
		<addPermission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	</androidManifestUpdates>
</root>
